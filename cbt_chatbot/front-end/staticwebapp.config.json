{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/static/*", "/images/*", "/*.{png,jpg,gif,svg,ico}", "/*.{css,scss,js,json,map}"]
    },
    "mimeTypes": {
      ".json": "text/json",
      ".css": "text/css",
      ".js": "text/javascript",
      ".html": "text/html"
    },
    "responseOverrides": {
      "404": {
        "rewrite": "/index.html",
        "statusCode": 200
      }
    },
    "routes": [
      {
        "route": "/api/*",
        "allowedRoles": ["anonymous"]
      },
      {
        "route": "/login",
        "allowedRoles": ["anonymous"]
      },
      {
        "route": "/register",
        "allowedRoles": ["anonymous"]
      },
      {
        "route": "/",
        "allowedRoles": ["anonymous"]
      },
      {
        "route": "/teams",
        "allowedRoles": ["anonymous"]
      },
      {
        "route": "/sessions",
        "allowedRoles": ["authenticated", "anonymous"]
      },
      {
        "route": "/sessions/chatbot/*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/conversations",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/conversations/*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/goals",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/profile",
        "allowedRoles": ["authenticated"]
      }
    ],
    "globalHeaders": {
      "content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'; img-src 'self' data: https:; font-src 'self' https: data:;",
      "cache-control": "must-revalidate, max-age=600",
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY",
      "X-XSS-Protection": "1; mode=block",
      "Referrer-Policy": "strict-origin-when-cross-origin",
      "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
      "Access-Control-Allow-Headers": "Content-Type, Authorization"
    },
    "networking": {
      "allowedIpRanges": ["any"]
    },
    "platform": {
      "apiRuntime": "node:18"
    }
  }